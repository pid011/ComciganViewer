<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape>
      <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
      <gradient android:angle="270" android:endColor="@color/secondaryColor" android:startColor="@color/secondaryColor" />

      <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
    </shape>
  </item>
  <item android:state_pressed="false">
    <shape>
      <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
      <solid android:color="@color/secondaryColor" />
      <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
    </shape>
  </item>
</selector>